{
	"compilerOptions": {
		"baseUrl": "src",
		"declaration": true,
		"jsx": "react",
		"module": "commonjs",
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "dist",
		"paths": {
			"@components/*": ["components/*"],
			"@styles/*": ["assets/styles/*"],
			"@src/*": ["./*"]
		},
		"preserveConstEnums": true,
		"pretty": true,
		"removeComments": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"target": "es2017",
		"typeRoots" : ["./node_modules/@types", "./typings"],
	},
	"exclude": [
		"node_modules"
	]
}
